<Border x:Class="PaControlDemo.UserControl.UnderConstruction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/PaControl"
        xmlns:langs="clr-namespace:PaControlDemo.Properties.Langs"
        xmlns:ex="clr-namespace:PaControlDemo.Tools.Extension"
        Background="{DynamicResource RegionBrush}"
        CornerRadius="4">
    <hc:TransitioningContentControl>
       <StackPanel Margin="32">
            <hc:GifImage Width="400" Height="300">
                <hc:GifImage.Source>
                    <BitmapImage UriSource="/PaControlDemo;component/Resources/Img/under_construction.gif"/>
                </hc:GifImage.Source>
            </hc:GifImage>
           <TextBlock Margin="0,16,0,0" HorizontalAlignment="Center" Text="{ex:Lang Key={x:Static langs:LangKeys.ComingSoon}}" Style="{StaticResource TextBlockLargeBold}"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</Border>
