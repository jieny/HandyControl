<Border x:Class="PaControlDemo.UserControl.InteractiveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:langs="clr-namespace:PaControlDemo.Properties.Langs"
        xmlns:ex="clr-namespace:PaControlDemo.Tools.Extension"
        xmlns:hc="https://handyorg.github.io/PaControl"
        CornerRadius="10"
        Width="400"
        Height="247"
        DataContext="{Binding InteractiveDialog, Source={StaticResource Locator}}"
        Background="{DynamicResource RegionBrush}">
    <StackPanel VerticalAlignment="Center" Margin="32">
        <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="{Binding Message}"/>
        <TextBox Margin="0,32,0,0" Style="{StaticResource TextBoxExtend}" Text="{Binding Result,UpdateSourceTrigger=PropertyChanged}" hc:InfoElement.Placeholder="{ex:Lang Key={x:Static langs:LangKeys.PleaseInput}}"/>
        <Button Width="120" Margin="0,32,0,0" Command="{Binding CloseCmd}" Style="{StaticResource ButtonPrimary}" Content="{ex:Lang Key={x:Static langs:LangKeys.Ok}}"/>
    </StackPanel>
</Border>
