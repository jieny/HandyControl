<UserControl x:Class="PaControlDemo.UserControl.ImageBrowserDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource RegionBrush}"
             xmlns:langs="clr-namespace:PaControlDemo.Properties.Langs"
             xmlns:ex="clr-namespace:PaControlDemo.Tools.Extension"
             DataContext="{Binding ImageBrowserDemo,Source={StaticResource Locator}}"
             xmlns:hc="https://handyorg.github.io/PaControl">
    <hc:TransitioningContentControl>
        <StackPanel Margin="32">
            <hc:ImageViewer x:Name="ImageViewerDemo" Background="{DynamicResource SecondaryRegionBrush}" MaxWidth="600" Height="330" ImageSource="/PaControlDemo;component/Resources/Img/1.jpg"/>
            <Button Margin="0,32,0,0" Command="{Binding OpenImgCmd}" Content="{ex:Lang Key={x:Static langs:LangKeys.OpenImageBrowser}}" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Center"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
