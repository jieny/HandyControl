<UserControl x:Class="PaControlDemo.UserControl.ScreenshotDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/PaControl"
             xmlns:langs="clr-namespace:PaControlDemo.Properties.Langs"
             xmlns:ex="clr-namespace:PaControlDemo.Tools.Extension"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <Button Content="{ex:Lang Key={x:Static langs:LangKeys.StartScreenshot}}" Command="hc:ControlCommands.StartScreenshot"/>
    </hc:TransitioningContentControl>
</UserControl>
